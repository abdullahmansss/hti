<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="30dp"
    >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >

        <RadioButton
            android:id="@+id/french_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="French"
            android:textSize="20sp"
            android:onClick="selectType"
            />

        <RadioButton
            android:id="@+id/turkish_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turkish"
            android:textSize="20sp"
            android:onClick="selectType"
            />

        <RadioButton
            android:id="@+id/espresso_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Espresso"
            android:textSize="20sp"
            android:onClick="selectType"
            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additions"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        />

    <CheckBox
        android:id="@+id/chocolate_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chocolate"
        android:textSize="20sp"
        />

    <CheckBox
        android:id="@+id/caramel_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caramel"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        />

    <NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="order now"
        />

</LinearLayout>